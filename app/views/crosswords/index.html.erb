<h1>Listing Crosswords</h1>

<table id='crosswords'>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Copyright</th>
    <th>&nbsp;</th>
  </tr>

  <% @crosswords.each do |crossword| %>
    <tr>
      <td><%= link_to crossword.title, crossword %></td>
      <td><%= crossword.author %></td>
      <td><%= crossword.copyright %></td>
      <td>
        <%= link_to 'Destroy', crossword, confirm: 'Are you sure?',
              method: :delete %>
      </td>
    </tr>
  <% end %>
</table>

